@{
    Layout = null;
}

@using SEEIPro.Models;

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>产业发展智库</title>
    <link href="~/Scripts/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        .panel {
            margin: 40px auto;
            width: 100%;
            min-height: 800px;
            overflow: hidden;
            color: #4F4F4F;
            font-size: 16px;
            font-family: 'Microsoft YaHei';
        }

            .panel .panel-body p {
                line-height: 40px;
            }

            .panel .panel-body h4 {
                border-bottom: 1px solid #b7b7b7;
            }

        .expert_icon {
            width: 130px;
            height: 165px;
        }



        ul li {
            float: left;
            padding: 25px 20px;
            list-style-type: none;
        }

            ul li span {
                font-size: 14px;
            }

            ul li a {
                color: black;
                text-decoration: none;
                cursor: pointer;
            }

                ul li a:hover {
                    color: blue;
                    border-bottom: solid blue 1px;
                    background-color: #DCDCDC;
                }
    </style>

</head>
<body>
    <div class="panel panel-default">
        <div class="panel-heading"><h4>产业发展智库</h4></div>
        <div class="panel-body">
            <p>
                &nbsp;&nbsp;&nbsp;&nbsp; 南方教育装备产业发展智库是由江门市蓬江区南方教育装备创新研究院在教育部教育装备研究与发展中心指导下、江门市蓬江区人民政府的支持下建立的，集产业规划、技术研发、技术指导与咨询、人才培养、科技评估于一体的，教育装备产业发展科学决策、科学监管的思想库和智囊团。
            </p>
            <p>
                &nbsp;&nbsp;&nbsp;研究院不断地通过与其他高校、企业及培训活动，成功邀请来自南京、上海、武汉、杭州等地数名专家进入智库。截止目前，共计37名顾问与专家进入产业发展智库。
            </p>
            <h4>智库特聘专家<span style="color:#b7b7b7">(排名不分先后)</span></h4>

            <ul>
                <li>
                    <img class="expert_icon" src="~/Content/xiaoyicun/obama.jpg" alt="暂无照片" /><br />
                    <span>姓名：<a href="#" target="_blank">陈琳</a></span><br />
                    <span>技术职称：处长</span><br />
                    <span>研究领域：教育信息化</span>
                </li>
                <li>
                    <img class="expert_icon" src="~/Content/xiaoyicun/obama.jpg" alt="暂无照片" /><br />
                    <span>姓名：<a href="#" target="_blank">农定伟</a></span><br />
                    <span>技术职称：高级教师</span><br />
                    <span>研究领域：智慧课堂</span>
                </li>
                <li>
                    <img class="expert_icon" src="~/Content/xiaoyicun/obama.jpg" alt="暂无照片" /><br />
                    <span>姓名：<a href="#" target="_blank">吴日堂</a></span><br />
                    <span>技术职称：讲师</span><br />
                    <span>研究领域：界面与交互设计</span>
                </li>
                <li>
                    <img class="expert_icon" src="~/Content/xiaoyicun/obama.jpg" alt="暂无照片" /><br />
                    <span>姓名：<a href="#" target="_blank">区建峰</a></span><br />
                    <span>技术职称：高级教师</span><br />
                    <span>研究领域：STEAM教育理论</span>
                </li>
                <li>
                    <img class="expert_icon" src="~/Content/xiaoyicun/obama.jpg" alt="暂无照片" /><br />
                    <span>姓名：<a href="#" target="_blank">胡畔</a></span><br />
                    <span>技术职称：讲师</span><br />
                    <span>研究领域：智慧教育学习环境</span>
                </li>
                <li>
                    <img class="expert_icon" src="~/Content/xiaoyicun/obama.jpg" alt="暂无照片" /><br />
                    <span>姓名：<a href="#" target="_blank">王汉友</a></span><br />
                    <span>技术职称：副教授</span><br />
                    <span>研究领域：工业设计教育研究</span>
                </li>


                @foreach (Expert expert in ViewBag.Experts as List<Expert>)
                {
                    <li>
                        <img class="expert_icon" src="~/Content/xiaoyicun/obama.jpg" alt="暂无照片" /><br />
                        <span>姓名：<a href="@expert.personalUrl" target="_blank">@expert.eName</a></span><br />
                        <span>技术职称：@expert.academicTitles</span><br />
                        <span>
                            研究领域：@if (expert.field.Length > 5)
                            { @expert.field.Substring(0, 5);
                            }
                            else
                            { @expert.field.ToString();
                            }
                        </span>
                    </li>
                }

                <li>
                    <a href="#" style="padding:10px 20px;background:#F9F9F9;border-radius:10px ;text-align:center;vertical-align:middle;" target="_blank">查看更多</a>
                </li>
            </ul>


        </div>
    </div>






</body>
</html>
